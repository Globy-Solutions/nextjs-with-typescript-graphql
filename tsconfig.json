{
  "compilerOptions": {
    "target": "es5",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": [
      "node_modules/@types",
      "cypress", "@testing-library/cypress"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "graphql.d.ts",
    "./**/*.(ts|graphql)$"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "src/__tests__/**/***/*",
    "./__generated__",
    "./lib/resolvers.ts",
    "./lib/**/*.graphqls"
  ]
}
