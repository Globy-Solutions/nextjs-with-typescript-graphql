{
  "name": "nextjs-with-typescript-graphql",
  "version": "2.0.0",
  "private": true,
  "homepage": "https://www.youtube.com/watch?v=HDFNjDKKO6A",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn check-all"
    }
  },
  "scripts": {
    "clean": "rm -rf .next;rm ./graphql/queries/*.graphql.d.ts;rm .env.local;rm public/*.js",
    "codegen": "graphql-let",
    "dev": "NODE_ENV=test next dev -p 3001",
    "build": "yarn codegen && next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --check --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "yarn codegen && jest --update-snapshot --detectOpenHandles --watchAll",
    "coverage": "yarn codegen && jest --collect-coverage",
    "cypress:open": "cypress open",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "analyzer": "ANALYZE=true NODE_ENV=test next build && yarn start",
    "development": "cp .env.development .env.local && NODE_ENV=development yarn build && yarn start",
    "production": "cp .env.production .env.local && NODE_ENV=production yarn build && yarn start"
  },
  "dependencies": {
    "@apollo/client": "3.5.10",
    "@graphql-tools/load-files": "6.5.3",
    "@graphql-tools/merge": "8.2.10",
    "@graphql-tools/schema": "8.3.10",
    "apollo-server-micro": "3.6.7",
    "graphql": "16.3.0",
    "next": "12.1.5",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.16.7",
    "@fortawesome/fontawesome-svg-core": "6.1.1",
    "@fortawesome/free-brands-svg-icons": "6.1.1",
    "@fortawesome/free-regular-svg-icons": "6.1.1",
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/import-types-preset": "2.1.15",
    "@graphql-codegen/plugin-helpers": "2.4.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "3.2.11",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@next/bundle-analyzer": "12.1.5",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.170",
    "@swc/jest": "0.2.20",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "13.1.1",
    "@types/jest": "^27.4.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "17.0.25",
    "@types/nprogress": "0.2.0",
    "@types/react": "18.0.6",
    "@types/react-dom": "18.0.2",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "@zeit/next-sass": "1.0.1",
    "ansi-regex": "6.0.1",
    "autoprefixer": "10.4.4",
    "babel-jest": "27.5.1",
    "cypress": "9.5.4",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "eslint-plugin-sonarjs": "0.13.0",
    "graphql-let": "0.x",
    "graphql-tag": "2.12.6",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "12.4.0",
    "next-pwa": "5.5.2",
    "node-sass": "7.0.1",
    "postcss": "8.4.12",
    "prettier": "2.6.2",
    "react-test-renderer": "18.0.0",
    "sass": "1.50.1",
    "swc-loader": "0.2.0",
    "typescript": "4.6.3",
    "yaml-loader": "0.7.0"
  }
}
